{
  "name": "clone-natours",
  "author": "Thiago Nascimento",
  "version": "1.0.0",
  "type": "module",
  "description": "Learning node, express and mongoDB",
  "main": "app.js",
  "keywords": [],
  "license": "ISC",
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:database && node --watch --no-warnings server.js",
    "services:up": "docker compose -f database/docker-compose.yaml up -d",
    "services:stop": "docker compose -f database/docker-compose.yaml stop",
    "services:down": "docker compose -f database/docker-compose.yaml down",
    "services:wait:database": "node database/scripts/wait-for-mongodb.js",
    "services:data:import": "node dev-data/data/import-dev-data.js --import",
    "services:data:delete": "node dev-data/data/import-dev-data.js --delete",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write ."
  },
  "engines": {
    "node": "24"
  },
  "dependencies": {
    "dotenv": "^17.3.1",
    "dotenv-expand": "^12.0.3",
    "express": "^4.22.1",
    "mongoose": "^5.13.23",
    "morgan": "^1.10.1"
  },
  "devDependencies": {
    "@types/morgan": "^1.9.10",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "prettier": "^3.8.1"
  }
}
